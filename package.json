{
  "name": "ts-compiler-bin",
  "version": "1.0.3",
  "description": "A lightweight tool that compiles TypeScript into a single executable binary",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "ts-compiler-bin": "dist/bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/bin/cli.js",
    "prepublishOnly": "npm run build",
    "start": "node dist/bin/cli.js"
  },
  "keywords": [
    "typescript",
    "compiler",
    "binary",
    "executable",
    "pkg",
    "esbuild"
  ],
  "author": "Michael Ilyash",
  "license": "MIT",
  "dependencies": {
    "esbuild": "^0.17.19",
    "pkg": "^5.8.1",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@types/node": "^18.16.3"
  },
  "engines": {
    "node": ">=14"
  },
    "repository": {
    "type": "git",
    "url": "git+https://github.com/MykhailoIlyashDev/ts-compiler-bin.git"
  },
  "bugs": {
    "url": "https://github.com/MykhailoIlyashDev/ts-compiler-bin/issues"
  },
  "homepage": "https://github.com/MykhailoIlyashDev/ts-compiler-bin#readme"
}
